
@{

if (Session["FullUserName"] ==null)
{
    Response.Redirect("~/Login/Index");
}
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Tasks</title>
    <link rel="icon" href="~/Content/Assets/images/tasklogo.png" type="image/gif" sizes="16x16">
    @Styles.Render("~/Content/css")
    @Scripts.Render(" ~/bundles/bootstrap")
   
    @*@Scripts.Render("~/bundles/modernizr")*@
  
    <script src="~/Scripts/jquery-3.2.1.min.js"></script>
    <link href="~/Content/Assets/FontAwesome/fontawesome/css/all.css" rel="stylesheet" />


    <style>
        .estilo515{
            color:#174270;
        }
        body {
            background-image: url('../../Content/Assets/images/doodles.png');
            background-size:25%;
        }
    </style>
</head>
<body style="background-color:#ffffff ">

   

    <nav class="navbar  navbar-expand-sm  navbar-dark" style="height:55px;background-color:#212121">


        <a href="@Url.Action("Index", "Home")" class="navbar-brand">
            

            <img src="~/Content/Assets/images/tasklogo.png"  style="max-height:42px" />
        </a>
       
        <ul class="navbar-nav">
            <li class="nav-item ">
                @Html.ActionLink("Inicio", "Index", "Home",null, new { @class = " estilo515 nav-link", @style = "color:#007bff" })
            </li>
            <li class="nav-item estilo515">
                @Html.ActionLink("Reportes", "Index", "Reporter", null, new { @class = "estilo515 nav-link", @style = "color:#007bff" })
            </li>

          
        </ul>
        <ul class="navbar-nav mr-auto"></ul>

        <ul class="navbar-nav">
            <li class="nav-item dropdown" style="margin-top:4px">
                
                <a class="nav-link dropdown-toggle" href="#" id="navbardrop" data-toggle="dropdown" style="color:#007bff">
                   <label>@Session["FullUserName"].ToString().ToUpper()</label>
                    @Html.Hidden("lblUser", Session["User"].ToString())
                </a>
                <div class="dropdown-menu">
                    <a>
                        @Html.ActionLink("Administrador", "Index", "Administration", null, new { @class = "estilo515 dropdown-item" })
                    </a>
                    
                    <a>
                        @Html.ActionLink("Cerrar Sesion", "LogOut", "Login", null, new { @class = "dropdown-item" })
                       
                    </a>

                </div>
            </li>
        </ul>
    </nav>
    <br />
    <div class="container-fluid"  style="background-color: #fafafa; max-height: 54.5%; min-height: 54.5%; border: 1px solid  #9e9e9e; border-radius: 7px;max-width:1320px">
        @RenderBody()
       

        <br />
    </div>

    @RenderSection("scripts", required: false)

}


</body>
</html>
