
@{

if (Session["FullUserName"] ==null)
{
    Response.Redirect("~/Login/Index");
}
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render(" ~/bundles/bootstrap")
   
   
    @*@Scripts.Render("~/bundles/modernizr")*@
  
    <script src="~/Scripts/jquery-3.2.1.min.js"></script>

</head>
<body>

   

    <nav class="navbar navbar-expand-sm bg-dark navbar-dark" style="height:55px">
        <a class="navbar-brand" href="#">Logo</a>

        <ul class="navbar-nav">
            <li class="nav-item">
                @Html.ActionLink("Inicio", "Index", "Home",null, new { @class = "nav-link" })
            </li>
            <li class="nav-item">
                @Html.ActionLink("Reportes", "Index", "Reporter", null, new { @class = "nav-link" })
            </li>

          
        </ul>
        <ul class="navbar-nav mr-auto"></ul>

        <ul class="navbar-nav">
            <li class="nav-item dropdown" style="margin-top:4px">
                
                <a class="nav-link dropdown-toggle" href="#" id="navbardrop" data-toggle="dropdown">
                   <label>@Session["User"].ToString()</label>
                </a>
                <div class="dropdown-menu">
                    <a>
                        @Html.ActionLink("Administrador", "Index", "Administration", null, new { @class = "dropdown-item" })
                    </a>
                    <a>
                        @Html.ActionLink("Contact", "Contact", "Home", null, new { @class = "dropdown-item" })
                    </a>
                    <a>
                        @Html.ActionLink("Cerrar Sesion", "LogOut", "Login", null, new { @class = "dropdown-item" })
                       
                    </a>

                </div>
            </li>
        </ul>
    </nav>
    <br />
    <div class="container-fluid"  style="background-color: #fafafa; max-height: 54.5%; min-height: 54.5%; border: 1px solid  #9e9e9e; border-radius: 7px;max-width:1360px">
        @RenderBody()
       

        <br />
    </div>

    @RenderSection("scripts", required: false)

}


</body>
</html>
